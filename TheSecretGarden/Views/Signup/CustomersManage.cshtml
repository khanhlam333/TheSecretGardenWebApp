@using TheSecretGarden.Models
@model IEnumerable<Customer>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Customers Management - The Secret Garden";
    var message = TempData["message"] as string;
    var style = TempData["style"] as string;
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.DateRegistered)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Orders</th>
                    <th>Total Spend</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Username)</td>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.DateRegistered)</td>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.DateRegistered)</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>