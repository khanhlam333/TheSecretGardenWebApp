@using TheSecretGarden.Models
@model IEnumerable<Order>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Orders Management - The Secret Garden";
    var message = TempData["message"] as string;
    var style = TempData["style"] as string;
}

<h1>Orders Management</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Customer.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Id)</td>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Customer.Username)</td>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td><a asp-action="Details" asp-route-id="@item.Id" asp-controller="Order" class="btn btn-outline-primary">Details</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>